@model GameStore.ViewModels.LoginViewModel

<h2>Вхід в акаунт</h2>
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly" ></div>
    <div>
        <label asp-for="Email" ></label><br />
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" class="form-control"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="RememberMe"></label><br />
        <input asp-for="RememberMe" class="form-check-input" type="checkbox"/>
    </div>
    <div>
        <input type="submit" value="Увійти" class = "btn btn-outline-info"/>
        <a asp-controller="Account" asp-action="Register" class = "btn btn-outline-dark">Реєстація</a>
    </div>
</form>
