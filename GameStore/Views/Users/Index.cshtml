@model IEnumerable<GameStore.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Користувачі</h1>

<p>
    <a asp-action="Create">Створити користувача</a>
</p>

<style>
  .nav {
    width: 1000px;
    list-style-type: none;
    text-align: center;
    margin: 0;
    padding: 0;
  }

  .nav li {
    display: inline-block;
    font-size: 20px;
    padding: 20px;
  }
  .center-text {
    height: 56px;
    line-height: 56px;
    text-align: center;
  }
  
</style>

<div>
    <div class="excel_import">
        <div id="upload_file">
            <h3>Оберіть exel-файл для заватаження</h3>
            @using (Html.BeginForm("Import", "Users", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm-excel" }))
            {
                <div>
                    Завантажте Excel-файл:
                    <ul class="nav">
                        <li><input type="file" name="fileExcel" id="fileExcel" class="form-control"/></li>
                        <li><input type="submit" value="Завантажити" class="btn btn-dark"/></li>
                    </ul>
                </div>
            }
        </div>
    </div>
    <div>
        <table class="table">
            <thead>
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Balance)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="center-text">
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td class="center-text">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="center-text">
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td class="center-text">
                        @Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

